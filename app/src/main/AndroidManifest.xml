<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cinemabooking">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/popcorn"
        android:label="@string/app_name"
        android:roundIcon="@drawable/popcorn"
        android:supportsRtl="true"
        android:theme="@style/Theme.CinemaBooking">
        <activity android:name=".Booking"></activity>
        <activity android:name=".CinemaInfo" />
        <activity android:name=".FilmInfo" />
        <activity
            android:name=".Search"
            android:theme="@style/Theme.CinemaBooking.NoActionBar" />
        <activity android:name=".Signup" />
        <activity
            android:name=".Login"
            android:theme="@style/Theme.CinemaBooking.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.CinemaBooking.NoActionBar" />
        <activity android:name=".Splach_Screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>